set $mod Mod4

bindsym $mod+Return exec alacritty

bindsym $mod+d exec wofi --show drun --style ~/.config/wofi/styles.css --conf ~/.config/wofi/config

bindsym $mod+q kill


bindsym $mod+Shift+c reload

font pango:JetBrains Mono 10

client.focused          #ff7ac6 #ff7ac6 #ffffff #ff7ac6
client.unfocused        #0f111a #0f111a #888888 #0f111a

bar {
  position top
  font pango:JetBrains Mono 10
  status_command while date +'%Y-%m-%d %H:%M:%S'; do sleep 1; done
  colors {
    background #0f111a
    statusline #ffffff
    separator #666666
    focused_workspace  #ff7ac6 #ff7ac6 #ffffff
    inactive_workspace #1e1e2e #1e1e2e #aaaaaa
  }
}

# Floating
floating_modifier $mod

# Send to float
bindsym $mod+Shift+space floating toggle

# Reload/restart/exit
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec swaynag -t warning -m 'Exit sway?' -B 'Yes' 'swaymsg exit'

# Focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split
bindsym $mod+h split h
bindsym $mod+v split v

# Fullscreen
bindsym $mod+f fullscreen toggle

# Layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Workspaces
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5

# Move to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5


# TUI popups
bindsym $mod+n exec alacritty --class floating -e nmtui
bindsym $mod+m exec alacritty --class floating -e pulsemixer

# Floating windows
for_window [app_id="floating"] floating enable

# Brightness popup
bindsym $mod+b exec alacritty --class floating -e ~/.local/bin/brightness-simple
bindsym $mod+Shift+b exec alacritty --class floating -e ~/.local/bin/brightness-tui
# Wallpapers
output * bg ~/wallpaper.jpg fill

# Screenshots
# Screenshot dell'intero schermo
bindsym Print exec grim ~/Pictures/screenshot-$(date +%Y%m%d-%H%M%S).png

# Screenshot di un'area
bindsym Shift+Print exec grim -g "$(slurp)" ~/Pictures/screenshot-$(date +%Y%m%d-%H%M%S).png

# Screenshot negli appunti
bindsym Ctrl+Print exec grim - | wl-copy
bindsym Ctrl+Shift+Print exec grim -g "$(slurp)" - | wl-copy

# Monitor Manager TUI  
bindsym $mod+Shift+m exec alacritty --class floating -e ~/.local/bin/monitor-manager

# Volume manager TUI
bindsym $mod+Shift+v exec alacritty --class floating -e /etc/nixos/volume-manager
